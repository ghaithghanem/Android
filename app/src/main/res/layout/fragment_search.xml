<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amier.Activities.activities.SearchFragment">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/searchBar"
        app:startIconDrawable="@drawable/ic_baseline_search_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/keyword"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:hint="Chercher par nom ..." />
    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:id="@+id/linearlayoutFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchBar"
        android:layout_alignEnd="@id/searchBar"
        android:layout_marginRight="80dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Found"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Found"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/happy"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/happy" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearlayoutLost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchBar"
        android:layout_marginLeft="80dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sad"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/sad" />

        <TextView

            android:id="@+id/Lost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Lost"
            android:textSize="20dp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ajouterArticle"
        android:layout_below="@id/linearlayoutLost"
        android:layout_marginTop="10dp">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/ajouterArticle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:background="@drawable/ic_baseline_add_circle_24"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView" />

</RelativeLayout>